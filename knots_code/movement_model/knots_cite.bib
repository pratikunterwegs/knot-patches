pmid = {27920382},
publisher = {The Royal Society},
title = {{Adaptation to fragmentation: evolutionary dynamics driven by human influences.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/27920382 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC5182433},
