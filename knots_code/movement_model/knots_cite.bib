journal = {Ecology},
keywords = {Carnivore community,Cost-benefit trade-off,Interference competition,Intraguild competition,Karongwe Game Reserve,Movement ecology,Predator-prey interactions,South Africa,Top-down effects},
mendeley-tags = {Carnivore community,Cost-benefit trade-off,Interference competition,Intraguild competition,Karongwe Game Reserve,Movement ecology,Predator-prey interactions,South Africa,Top-down effects},
