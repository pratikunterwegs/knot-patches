title = {{Coupling of dispersal and aggression facilitates the rapid range expansion of a passerine bird.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/17827278 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC1986605},
