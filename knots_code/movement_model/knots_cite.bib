issn = {0005-7959},
journal = {Behaviour},
month = {jan},
number = {1},
pages = {28--48},
publisher = {Brill},
title = {{Structure and Causation of the Dominance Hierarchy in a Flock of Bar-Headed Geese (Anser Indicus)}},
url = {http://booksandjournals.brillonline.com/content/journals/10.1163/156853986x00207},
volume = {96},
year = {1986}
}
@article{,
