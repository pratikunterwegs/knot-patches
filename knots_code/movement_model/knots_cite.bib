pages = {2631--2637},
title = {{Do fences create an edge-effect on the movement patterns of a highly mobile mega-herbivore?}},
url = {https://www-sciencedirect-com.proxy-ub.rug.nl/science/article/pii/S0006320710003113},
volume = {143},
year = {2010}
}
