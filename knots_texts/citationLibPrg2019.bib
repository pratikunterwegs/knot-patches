  author = {Atkinson, Philip W. and Baker, Allan J. and Bevan, Richard M. and Clark, Nigel A. and Cole, Kimberly B. and Gonzalez, Patricia M. and Newton, Jason and Niles, Lawrence J. and Robinson, Robert A.},
