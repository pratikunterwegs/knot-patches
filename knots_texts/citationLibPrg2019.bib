  journal = {Wildlife Biol.},
  author = {Schmidt, Niels M. and {van Beest}, Floris M. and Mosbacher, Jesper B. and Stelvig, Mikkel and Hansen, Lars H. and {Nabe-Nielsen}, Jacob and Gr\o{}ndahl, Carsten},
