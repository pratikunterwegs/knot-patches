  number = {6},
  journal = {Journal of Animal Ecology},
  author = {Kraan, Casper and Gils, Jan A. Van and Spaans, Bernard and Dekinga, Anne and Bijleveld, Allert I. and Roomen, Marc Van and Kleefstra, Romke and Piersma, Theunis},
