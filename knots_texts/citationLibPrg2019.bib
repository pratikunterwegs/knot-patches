  keywords = {South Africa,Interference competition,Movement ecology,Carnivore community,Cost-benefit trade-off,Intraguild competition,Predator-prey interactions,Top-down effects,Karongwe Game Reserve},
  pages = {2619--2631},
  file = {/home/pratik/Zotero/storage/6HPS6JZQ/Vanak et al. - 2013 - Moving to stay in place behavioral mechanisms for coexistence of African large carnivores.pdf;/home/pratik/Zotero/storage/KID7X5LN/Vanak et al. - 2013 - Moving to stay in place Behavioral mechanisms for coexistence of African large carnivores(2).pdf},
